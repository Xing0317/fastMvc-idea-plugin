<idea-plugin>
    <id>com.xlh.plugin.fast-mvc-frame</id>
    <name>Fast MVC Generate</name>
    <vendor email="2834237037@qq.com" url="http://43.143.159.51/">邢垆恒</vendor>

    <description><![CDATA[
    Based on Mybatis-Plus, you can quickly generate MVC architectures<br>
    Generate Create Table SQL Base Entity<br>

    Usage:<br>
    <ul>
        <li>1.Select the path of the code that needs to be generated</li>
        <li>2.Enter the MySQL connection information and select the database</li>
        <li>3.Click OK to generate the code</li>
    </ul>
    <ul>
        <li>1.Go to Entity and right-click Generate and Choose ToSQL</li>
        <li>2.Click the copy button to copy the SQL statement</li>
    </ul>
    ]]></description>

    <!-- please see https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.lang</depends>
    <depends>com.intellij.modules.java</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <projectService serviceImplementation="com.xlh.plugin.data.DataSetting"/>
        <notificationGroup id="Custom Notification Group"
                           displayType="BALLOON"/>
    </extensions>

    <actions>
        <action id="CodeGenerateAction" class="com.xlh.plugin.action.GenerateAction"
                text="MVCCodeGenerate" description="Code Generate MVC" icon="/icons/logo.svg">
            <add-to-group group-id="ProjectViewPopupMenu" anchor="last"/>
        </action>
        <action class="com.xlh.plugin.action.ConvertBeanToSQLAction" text="ToSQL"
                description="Convert This Bean To Creat Table SQL" icon="/icons/mysql.svg">
            <add-to-group group-id="GenerateGroup" anchor="first"/>
        </action>
    </actions>
</idea-plugin>
